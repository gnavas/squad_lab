<!DOCTYPE html>
<html lang="en">
<%= erb :'/partials/_head' %>
<body>
  <%= erb :'/partials/_navbar' %>
  <div class ="container-fluid">
    <div class = "row">
      <div class ="col-md-10 col-md-offset-1">
        <table class =" text-center table table-striped table-bordered">
          <tr>
            <th><p class="text-center">Squad name</p></th>
            <th><p class="text-center">Mascot</p></th>
            <th><p class="text-center">More Info</p></th>
            <th><p class="text-center">Edit Squad</p></th>
          </tr>

          <% @squads.each do |x| %>
          <tr>
            <td><%= x["squad_name"] %></td>
            <td><%= x["mascot"] %></td>
            <td> <p class = "text-center"><a href='/squads/<%= x["squad_id"] %>'>More Info</a></p>
            </td>
            <td><p class = "text-center" ><a href='/squads/<%= x["squad_id"] %>/edit'>Edit Squad
            </a></p></td>
          </tr>
          <%end%>

        </table>
        
        <form action='/squads/new' method='get' >
          <button type="submit" class="btn btn-default">Add Team</button>
        </form>
      </div>
    </div>
  </div>
</body>
<%= erb :'/partials/_foot' %>
</html>
